# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.py text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# ROS files
*.launch text eol=lf
*.msg text eol=lf
*.srv text eol=lf
*.action text eol=lf
*.urdf text eol=lf
*.xacro text eol=lf
package.xml text eol=lf
CMakeLists.txt text eol=lf

# Scripts (ensure executable bit is preserved)
*.sh text eol=lf
scripts/** text eol=lf

# Binary files (no line ending conversion)
*.pt binary
*.pth binary
*.onnx binary
*.engine binary
*.tflite binary
*.pb binary
*.pkl binary
*.pickle binary

# Images
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.bmp binary
*.ico binary
*.svg text

# Videos
*.mp4 binary
*.avi binary
*.mov binary
*.mkv binary

# Data files
*.bag binary
*.csv text eol=lf
*.db binary
*.sqlite binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary
*.rar binary

# Documents
*.pdf binary
*.doc binary
*.docx binary
*.ppt binary
*.pptx binary

# Jupyter Notebooks (treat as text for better diffs)
*.ipynb text eol=lf

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
.vscode/ export-ignore
.idea/ export-ignore

# Language statistics (mark vendored/generated code)
training/models/pretrained/* linguist-vendored
segment-anything-2/* linguist-vendored
*.min.js linguist-vendored
*.min.css linguist-vendored

# Diff settings
*.ipynb diff=jupyternotebook
*.py diff=python
*.md diff=markdown

# Merge strategies
*.md merge=union
CHANGELOG/** merge=union
